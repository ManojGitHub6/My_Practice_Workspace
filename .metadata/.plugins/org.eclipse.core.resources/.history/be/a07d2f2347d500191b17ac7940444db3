	public void screenshot() throws Exception {
		
		TakesScreenshot ts=(TakesScreenshot) driver;
		File source=ts.getScreenshotAs(OutputType.FILE);
		FileUtils.copyFile(source, new File("./drivers/failed.png"));
		
	}

}
